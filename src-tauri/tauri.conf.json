{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Intear Wallet",
  "version": "0.1.0",
  "identifier": "tech.intear.wallet",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Intear Wallet",
        "width": 420,
        "height": 880,
        "resizable": true,
        "fullscreen": false,
        "theme": "Dark",
        "zoomHotkeysEnabled": true
      }
    ],
    "security": {
      "csp": null
    },
    "withGlobalTauri": true
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Finance",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "windows": {
      "allowDowngrades": false
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      }
    },
    "longDescription": "A fast and secure wallet for the NEAR blockchain.\n\nInteract easily with any NEAR dapp, trade with the best DEX Aggregatgor, and enjoy the best developer tools.",
    "shortDescription": "A fast and secure wallet for the NEAR blockchain"
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["intear"]
      }
    }
  }
}